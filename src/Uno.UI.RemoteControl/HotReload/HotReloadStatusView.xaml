	<local:EntryIconToObjectConverter
		x:Key="EntryIconToContentTemplate"
		SuccessValue="{StaticResource HotReloadIconSuccess}"
		FailedValue="{StaticResource HotReloadIconFailed}"
		ConnectionSuccessValue="{StaticResource HotReloadIconConnectionSuccess}"
		ConnectionFailedValue="{StaticResource HotReloadIconConnectionFailed}"
		ConnectionWarningValue="{StaticResource HotReloadIconConnectionWarning}" />

	<local:NullStringToCollapsedConverter x:Key="NullStringToCollapsed" />

	<DataTemplate x:Key="OperationTemplate">
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>
			
			<ContentControl 
				ContentTemplate="{Binding Icon, Converter={StaticResource EntryIconToContentTemplate}}"
				Grid.Column="1"
				HorizontalAlignment="Center"
				VerticalAlignment="Center"
				Margin="0,0,8,4" />

			<StackPanel Width="270" VerticalAlignment="Center" Grid.Column="2">
				<TextBlock
					VerticalAlignment="Center"
					TextWrapping="WrapWholeWords"
					FontSize="11"
					Text="{Binding Title}" />

				<TextBlock
					VerticalAlignment="Center"
					TextWrapping="WrapWholeWords"
					FontSize="9"
					Opacity="0.6"
					Text="{Binding Description}"
					Visibility="{Binding Description, Converter={StaticResource NullStringToCollapsed}}" />
			</StackPanel>

			<TextBlock 
					Text="{Binding TimeInfo}"
					Grid.Column="3"
					VerticalAlignment="Center"
					HorizontalAlignment="Right"
					TextAlignment="Right"
					Margin="20,0,0,0"
					FontSize="9"
					Opacity="0.45" />
		</Grid>
	</DataTemplate>

	<Style TargetType="local:HotReloadStatusView">
		<Setter Property="ProcessingNotification">
			<Setter.Value>
				<diag:DiagnosticViewNotification Duration="0:0:0" Options="EvenIfExpended">
					<diag:DiagnosticViewNotification.ContentTemplate>
						<DataTemplate>
							<StackPanel 
								Orientation="Horizontal"
								Background="{ThemeResource NotificationBackgroundBrush}"
								BorderThickness="1"
								BorderBrush="{ThemeResource NotificationBorderBrush}"
								Height="32"
								CornerRadius="4">
								<ProgressRing 
									Height="12"
									Width="12"
									Margin="4,0,0,0"
									VerticalAlignment="Center"
									HorizontalAlignment="Center" />
								<TextBlock 
									Margin="8,0"
									Text="Processing..."
									FontSize="11"
									VerticalAlignment="Center"
									HorizontalAlignment="Center" />
							</StackPanel>
						</DataTemplate>
					</diag:DiagnosticViewNotification.ContentTemplate>
				</diag:DiagnosticViewNotification>
			</Setter.Value>
		</Setter>

		<Setter Property="SuccessNotification">
			<Setter.Value>
				<diag:DiagnosticViewNotification Duration="0:0:5" Options="EvenIfExpended">
					<diag:DiagnosticViewNotification.ContentTemplate>
						<DataTemplate>
							<StackPanel 
								Orientation="Horizontal"
								Background="{ThemeResource NotificationBackgroundBrush}"
								BorderThickness="1"
								BorderBrush="{ThemeResource NotificationBorderBrush}"
								Height="32"
								CornerRadius="4">
								<ContentControl 
									ContentTemplate="{StaticResource HotReloadIconSuccess}"
									HorizontalAlignment="Center"
									VerticalAlignment="Center"
									Margin="4,-2,0,0" />
								<TextBlock
									Margin="8,0"
									Text="{Binding ToastDescription}"
									FontSize="11"
									VerticalAlignment="Center"
									HorizontalAlignment="Center" />
							</StackPanel>
						</DataTemplate>
					</diag:DiagnosticViewNotification.ContentTemplate>
				</diag:DiagnosticViewNotification>
			</Setter.Value>
		</Setter>

		<Setter Property="FailureNotification">
			<Setter.Value>
				<diag:DiagnosticViewNotification Duration="0:0:5" Options="EvenIfExpended">
					<diag:DiagnosticViewNotification.ContentTemplate>
						<DataTemplate>
							<StackPanel
								Orientation="Horizontal"
								Background="{ThemeResource NotificationBackgroundBrush}"
								BorderThickness="1"
								BorderBrush="{ThemeResource NotificationBorderBrush}"
								Height="32"
								CornerRadius="4">
								<ContentControl 
									ContentTemplate="{StaticResource HotReloadIconFailed}"
									HorizontalAlignment="Center"
									VerticalAlignment="Center"
									Margin="4,-2,0,0" />
								<TextBlock 
									Margin="8,0" 
									Text="{Binding ToastDescription}"
									FontSize="11"
									VerticalAlignment="Center"
									HorizontalAlignment="Center" />
							</StackPanel>
						</DataTemplate>
					</diag:DiagnosticViewNotification.ContentTemplate>
				</diag:DiagnosticViewNotification>
			</Setter.Value>
		</Setter>

		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="local:HotReloadStatusView">
					<Grid x:Name="Root" Width="20" Height="20">
						<VisualStateManager.VisualStateGroups>
							<VisualStateGroup x:Name="Status">
								<VisualState x:Name="Unknown">
									<VisualState.Setters>
										<Setter Target="HotReloadIcon.Visibility" Value="Collapsed" />
										<Setter Target="HotReloadProgressRing.Visibility" Value="Visible" />
									</VisualState.Setters>
								</VisualState>
								<VisualState x:Name="Initializing">
									<VisualState.Setters>
										<Setter Target="HotReloadIcon.Visibility" Value="Collapsed" />
										<Setter Target="HotReloadProgressRing.Visibility" Value="Visible" />
									</VisualState.Setters>
								</VisualState>
								<VisualState x:Name="Ready">
									<VisualState.Setters>
										<Setter Target="HotReloadIcon.Visibility" Value="Visible" />
										<Setter Target="HotReloadProgressRing.Visibility" Value="Collapsed" />
										<Setter Target="HotReloadIcon.ContentTemplate" Value="{StaticResource HotReloadIconConnectionSuccess}" />
									</VisualState.Setters>
								</VisualState>
								<VisualState x:Name="Warning">
									<VisualState.Setters>
										<Setter Target="HotReloadIcon.Visibility" Value="Visible" />
										<Setter Target="HotReloadProgressRing.Visibility" Value="Collapsed" />
										<Setter Target="HotReloadIcon.ContentTemplate" Value="{StaticResource HotReloadIconConnectionWarning}" />
									</VisualState.Setters>
								</VisualState>
								<VisualState x:Name="Error">
									<VisualState.Setters>
										<Setter Target="HotReloadIcon.Visibility" Value="Visible" />
										<Setter Target="HotReloadProgressRing.Visibility" Value="Collapsed" />
										<Setter Target="HotReloadIcon.ContentTemplate" Value="{StaticResource HotReloadIconConnectionFailed}" />
									</VisualState.Setters>
								</VisualState>
							</VisualStateGroup>

							<VisualStateGroup x:Name="Result">
								<!-- Visually we rely only on the notifications for the results. -->
								<VisualState x:Name="None" />
								<VisualState x:Name="Success" />
								<VisualState x:Name="Failed" />
							</VisualStateGroup>
						</VisualStateManager.VisualStateGroups>

						<Button Padding="0" Background="Transparent" BorderBrush="Transparent">
							<Button.Flyout>
								<Flyout Placement="BottomEdgeAlignedLeft">
									<Flyout.FlyoutPresenterStyle>
										<Style TargetType="FlyoutPresenter">
											<Setter Property="CornerRadius" Value="8" />
											<Setter Property="MaxWidth" Value="420" />
											<Setter Property="MaxHeight" Value="420" />
										</Style>
									</Flyout.FlyoutPresenterStyle>

									<StackPanel CornerRadius="8" Spacing="10" >
										<TextBlock
											Text="Events"
											FontSize="11"
											FontWeight="SemiLight"
											TextWrapping="WrapWholeWords"
											VerticalAlignment="Center" />

										<mux:ItemsRepeater
											ItemsSource="{TemplateBinding History}"
											ItemTemplate="{StaticResource OperationTemplate}">
											<mux:ItemsRepeater.Layout>
												<StackLayout Spacing="10" />
											</mux:ItemsRepeater.Layout>
										</mux:ItemsRepeater>
									</StackPanel>
								</Flyout>
							</Button.Flyout>

							<Grid>
								<ContentControl 
									x:Name="HotReloadIcon"
									ContentTemplate="{StaticResource HotReloadIconConnectionWarning}"
									HorizontalAlignment="Center"
									VerticalAlignment="Center"
									Margin="-2,-2,0,0"
									Visibility="Collapsed" />

								<ProgressRing 
									x:Name="HotReloadProgressRing"
									HorizontalAlignment="Center"
									VerticalAlignment="Center"
									Height="12"
									Width="12"
									Visibility="Visible" />
							</Grid>
						</Button>
					</Grid>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>
